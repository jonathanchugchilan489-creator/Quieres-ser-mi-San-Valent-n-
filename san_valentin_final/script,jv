function respuestaSi() {
    const frases = [
        "Te amo ðŸ’–",
        "Eres mi todo ðŸ’•",
        "Feliz San ValentÃ­n ðŸ’˜",
        "Siempre contigo ðŸŒ¸",
        "Mi persona favorita â¤ï¸",
        "Contigo todo âœ¨"
    ];

    setInterval(() => {
        const texto = document.createElement("div");
        texto.className = "frase";
        texto.innerText = frases[Math.floor(Math.random() * frases.length)];

        texto.style.left = Math.random() * window.innerWidth + "px";
        texto.style.top = "-30px";

        document.body.appendChild(texto);

        let y = -30;
        const bajar = setInterval(() => {
            y += 3;
            texto.style.top = y + "px";

            if (y > window.innerHeight) {
                clearInterval(bajar);
                texto.remove();
            }
        }, 20);

    }, 120);
}
